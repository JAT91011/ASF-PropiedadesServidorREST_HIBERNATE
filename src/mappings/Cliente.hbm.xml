<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="dao">

    <class name="Cliente" table="cliente">

        <id name="dni" column="dni"/>

        <property name="nombre" column="nombre" not-null="true"/>
		<property name="apellido" column="apellido" not-null="true"/>
		<property name="email" column="email"/>
		<property name="direccion" column="direccion"/>
		<property name="codigoPostal" column="cp"/> 
		<property name="telefono" column="telefono"/> 
				
		<set name="alquileres" cascade="delete" table="alquiler">
			<key>
                <column name="dniCliente"/>
            </key>
			<one-to-many class="Alquiler"/>
		</set>
		
   </class>
   
</hibernate-mapping>