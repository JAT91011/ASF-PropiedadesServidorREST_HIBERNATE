<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="dao.Cliente" table="CLIENTE">

        <id name="dni" column="DNI"/>

        <property name="nombre" column="NOMBRE" not-null="true"/>
		<property name="apellido" column="APELLIDO"/>
		<property name="email" column="EMAIL"/>
		<property name="direccion" column="DIRECCION"/>
		<property name="codigoPostal" column="CP"/> 
		<property name="telefono" column="TELEFONO"/> 
				
		<set name="alquileres" table="ALQUILER" lazy="true">
			<key column="dniCliente"/>
			<many-to-many column="idAlquiler" class="dao.Alquiler"/>
		</set>
		
   </class>
   
</hibernate-mapping>